<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.nissen.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Music App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MusicMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <uses-permission android:name="android.permission.WAKE_LOCK" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MusicPlayingActivity"
            android:label="Now Playing">

        </activity>

        <activity android:name=".MusicLibraryActivity"
            android:label="Your Library">

        </activity>

        <activity android:name=".MusicDetailsActivity"
            android:label="Track Details">

        </activity>
    </application>

</manifest>